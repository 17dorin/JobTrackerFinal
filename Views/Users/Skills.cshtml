@model List<Skill>

@{
    ViewData["Title"] = "Your Skills";
}

@{
    List<int> ExistingSkills = (List<int>)TempData["ExistingSkills"];
}

<h4>Add your tech skills below:</h4>
<form asp-controller="Users" asp-action="AddSkills">

    @if (ExistingSkills != null)
    {
        foreach (Skill s in Model)
        {
            if (ExistingSkills.Any(x => x.Equals(s.Id)))
            {
                <input type="checkbox" id="@s.Skill1" name="skillId" value="@s.Id" checked />
                <label for="@s.Skill1">@s.Skill1</label>
            }
            else
            {
                <input type="checkbox" id="@s.Skill1" name="skillId" value="@s.Id" />
                <label for="@s.Skill1">@s.Skill1</label>
            }
            <br />
        }
    }
    else
    {
        foreach (Skill s in Model)
        {

            <input type="checkbox" id="@s.Skill1" name="skillId" value="@s.Id" />
            <label for="@s.Skill1">@s.Skill1</label>
            <br />
        }
    }
    <input type="submit" />
</form>

<form asp-action="VoteSkill" asp-controller="Users">
    <h4>Don't see your particular skill? Add it here:</h4>
    <input type="text" name="SkillToAdd" />
    <input type="submit" />
</form>
