@model List<AspNetUser>

@{
    ViewData["Title"] = "Your Conversations";
}

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<table>
    @if (Model.Count > 0)
    {
        <tr>
            <th><h4>Inbox:</h4></th>
            <th></th>
        </tr>
        foreach (AspNetUser a in Model)
        {
            <tr>
                <td><a asp-action="Chat" asp-controller="Chat" asp-route-receiverId="@a.Id">@a.UserName</a> </td>
                <td><a asp-action="Delete" asp-controller="Chat" asp-route-receiverId="@a.Id">X</a></td>
            </tr>
            <br />
            <br />
        }
    }
    else
    {
        <tr>
            <th><h4>Inbox:</h4></th>
        </tr>
        <tr>
            <td>Empty...</td>
        </tr>
    }
</table>